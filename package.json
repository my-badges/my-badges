{
  "name": "update-my-badges",
  "version": "1.0.146",
  "description": "Generate badges for your GitHub projects",
  "type": "module",
  "bin": {
    "update-my-badges": "dist/src/main.js"
  },
  "imports": {
    "#src": "./dist/src/index.js",
    "#badges": "./dist/badges/index.js",
    "#badges/*": "./dist/badges/*"
  },
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "start": "tsc --watch",
    "tsc": "tsc",
    "build": "tsc",
    "check-images": "node scripts/check-images.mjs",
    "test": "npm run test:unit",
    "test:unit": "c8 -r lcov -r text -o coverage -x scripts -x test node --loader ts-node/esm --experimental-specifier-resolution=node scripts/test.mjs"
  },
  "dependencies": {
    "@octokit/plugin-retry": "^6.0.1",
    "@octokit/plugin-throttling": "^8.0.0",
    "minimist": "^1.2.8",
    "octokit": "^3.1.1"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^14.33.0",
    "@types/minimist": "^1.2.3",
    "@types/node": "^20.8.0",
    "c8": "^8.0.1",
    "fast-glob": "^3.3.1",
    "image-dimensions": "^2.3.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/my-badges/my-badges.git"
  },
  "author": "Anton Medvedev <anton@medv.io>",
  "license": "MIT"
}
