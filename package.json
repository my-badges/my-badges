{
  "name": "update-my-badges",
  "version": "1.0.237",
  "description": "Generate badges for your GitHub projects",
  "type": "module",
  "bin": {
    "update-my-badges": "dist/src/main.js"
  },
  "imports": {
    "#src": "./dist/src/index.js",
    "#badges": "./dist/badges/index.js",
    "#badges/*": "./dist/badges/*"
  },
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "start": "tsc --watch",
    "tsc": "tsc",
    "prebuild": "npm run megaera",
    "build": "tsc",
    "check-images": "node scripts/check-images.mjs",
    "generate-gh-pages": "node scripts/generate-gh-pages.mjs",
    "megaera": "zx scripts/megaera.mjs",
    "test": "vitest"
  },
  "dependencies": {
    "@octokit/plugin-paginate-graphql": "^5.2.4",
    "@octokit/plugin-retry": "^7.1.2",
    "@octokit/plugin-throttling": "^9.3.2",
    "megaera": "^1.0.2",
    "minimist": "^1.2.8",
    "octokit": "^4.0.2",
    "zurk": "^0.8.0",
    "stopword": "^3.1.3"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^15.25.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.2",
    "@types/stopword": "^2.0.3",
    "c8": "^10.1.3",
    "fast-glob": "^3.3.2",
    "image-dimensions": "^2.3.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zx": "^8.2.4"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/my-badges/my-badges.git"
  },
  "author": "Anton Medvedev <anton@medv.io>",
  "license": "MIT"
}
